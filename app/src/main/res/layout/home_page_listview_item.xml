<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_kind"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/kobi"/>

        <TextView
            android:id="@+id/tv_home_page_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinchuck"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布了活动"
            android:layout_gravity="center"
            android:textSize="15sp"/>

        <!--<View-->
            <!--android:layout_width="175dp"-->
            <!--android:layout_height="30dp"/>

        <ImageButton
            android:id="@+id/join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingRight="5dp"
            android:background="@drawable/ic_home_page_list"/>-->
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:id="@+id/tv_publisher_id"-->
            <!--android:padding="4dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_gravity="center|left"-->
            <!--android:text="201430614243"-->
            <!--android:textSize="12sp"/>-->

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="C10约球走起"
            android:maxLines="1"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:textStyle="normal|bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/home_page_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:text="桌游"/>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp"/>
        <!--
        <TextView
            android:id="@+id/tv_publisher_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/colorCancel"
            android:text="发布时间"/>
        -->

        <View
            android:layout_width="10dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="活动时间"
            android:textSize="12sp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_attended_number"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="已参与人数"
            android:textSize="12sp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_max_number"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="最大人数"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>