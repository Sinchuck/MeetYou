        <TextView
            android:id="@+id/cancel_edit_theme_bt"
            android:layout_toLeftOf="@+id/save_theme_bt"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="14sp"/>
        <TextView
