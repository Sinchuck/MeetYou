<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:toolbar="http://schemas.android.com/apk/res-auto"
                android:background="@color/personalCenterBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        toolbar:title="@string/app_name"
        toolbar:titleTextColor="#ffffff">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear_heads_and_kind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:id="@+id/linear_other_heads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/content_releaser_head"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/heads"/>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/content_user_nickname"
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textSize="16sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_account"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:textColor="@color/colorId"
                                />
                            <TextView
                                android:id="@+id/content_user_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:textColor="@color/colorId"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/content_activity_tag"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bg_cancel"/>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/linear_heads_and_kind"
                android:id="@+id/linear_theme"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_theme"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/content_activity_theme"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_theme_edit"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_time_num"
                android:layout_below="@+id/linear_theme"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_time"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/content_activity_time"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:background="@drawable/bg_select"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/person_number"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/content_max_number"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:background="@drawable/bg_select"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_content"
                android:layout_below="@+id/linear_time_num"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content_activity_details"
                    android:background="@drawable/bg_content_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textSize="20sp"
                    android:lines="6"/>
            </LinearLayout>

            <RelativeLayout
                android:padding="10dp"
                android:background="#fff"
                android:layout_below="@+id/linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/content_comment_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_cancel"
                    android:text="@string/watch_comment"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/content_concern_tv"
                    android:layout_toLeftOf="@id/content_comment_tv"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_cancel"
                    android:text="@string/attend"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
