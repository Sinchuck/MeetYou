<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:id="@+id/application_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="MeetYou"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="normal"
            android:textColor="#fff"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/zhanghao_linea"
        android:layout_below="@+id/application_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="100dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/id_text"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="201430614243"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_linea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/zhanghao_linea">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/password_text"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="yang123456"
            android:textSize="20sp"
            android:password="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="225dp"
        android:layout_height="44dp"
        android:layout_below="@+id/password_linea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_login1"
        android:gravity="center"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="225dp"
        android:layout_height="44dp"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_register1"
        android:gravity="center"
        android:text="注册"
        android:textColor="#2590af"
        android:textSize="18sp" />


    <CheckBox
        android:id="@+id/cb_remenber"
        android:layout_alignLeft="@+id/tv_register"
        android:layout_below="@+id/tv_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:textColor="#2590af"
        android:textSize="15sp"
        android:text="记住密码" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_alignRight="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/tv_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="忘记密码?"
        android:textColor="#2590af"
        android:textSize="15sp" />

</RelativeLayout>
