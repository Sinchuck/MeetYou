<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    >

    <RelativeLayout
        android:id="@+id/application_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="MeetYou"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="normal"
            android:textColor="#fff"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_input"
        android:layout_below="@+id/application_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="100dp"
        >

        <com.example.yang.meetyou.views.CleanEditText
            android:id="@+id/et_account"
            style="@style/login_edit_style"
            android:hint="请输入账号"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f8f8f8"/>

        <com.example.yang.meetyou.views.CleanEditText
            android:id="@+id/et_password"
            style="@style/login_edit_style"
            android:hint="请输入密码"
            android:inputType="textPassword"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/linear_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:text="登录"
        android:textColor="#5c5c5c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_sign_up"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:text="注册"
        android:textColor="#2590af"
        android:textSize="18sp" />


    <CheckBox
        android:id="@+id/cb_remenber"
        android:layout_alignLeft="@+id/bt_sign_up"
        android:layout_below="@+id/bt_sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:textColor="#2590af"
        android:textSize="15sp"
        android:text="记住密码" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_alignRight="@+id/bt_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/bt_sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="忘记密码?"
        android:textColor="#2590af"
        android:textSize="15sp" />

</RelativeLayout>
