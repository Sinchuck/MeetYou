<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp">
    <ImageView
        android:id="@+id/comment_user_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/heads"
        />
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comment_user_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:text="我是谁"
            android:textColor="#3494BA"/>
        <TextView
            android:id="@+id/comment_user_comment"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="...................................................................................................................................................................................................................................."
            android:textSize="16sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:text="2012-10-10 20:29:37"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>